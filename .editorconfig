# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{sass,scss,css,js,json,html}]
charset = utf-8

# 2 space indentation
[*.{sass,scss,json}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{js,css,html}]
indent_style = space
indent_size = 4


